{
    "name": "cursor",
    "version": "0.1.0",
    "description": "",
    "dependencies": {
        "@supabase/supabase-js": "^1.11.16",
        "crypto-js": "^4.0.0",
        "fastdom": "^1.0.10",
        "mnemonist": "^0.38.3",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@parcel/optimizer-data-url": "^2.0.1",
        "@parcel/transformer-inline-string": "^2.0.1",
        "lib": "^4.3.3",
        "parcel": "^2.0.1",
        "parcel-reporter-static-files-copy": "github:Drecu/parcel-reporter-static-files-copy"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev": "parcel watch",
        "build": "rm -rf ./dist && parcel build"
    },
    "author": "Leonard Puhl",
    "license": "ISC",
    "staticFiles": {
        "distDir": "dist/extension",
        "staticPath": "static"
    },
    "targets": {
        "standalone": {
            "source": [
                "src/inject.js"
            ],
            "distDir": "dist/standalone",
            "sourceMap": false,
            "engines": {
                "browsers": [
                    "last 2 Chrome versions"
                ],
                "optimize": "true",
                "context": "browser"
            }
        },
        "chrome-extension": {
            "source": [
                "src/inject.js",
                "src/background.js"
            ],
            "distDir": "dist/extension",
            "engines": {
                "browsers": [
                    "last 2 Chrome versions"
                ],
                "optimize": "true",
                "context": "browser",
                "sourceMap": "true"
            }
        }
    }
}
